# QuizAi Environment Variables
# Copy this file to .env and fill in your actual values

# Required - OpenAI API Key for quiz generation
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional - Maximum PDF file size in bytes (default: 100MB)
# 104857600 = 100MB, 52428800 = 50MB, 209715200 = 200MB
MAX_PDF_SIZE=104857600

# Optional - Maximum pages per PDF (default: 200)
MAX_PAGES_PER_PDF=200

# Optional - Default questions per page (default: 2)
DEFAULT_QUESTIONS_PER_PAGE=2

# Development Environment Variables
WEB_URL=http://localhost:3000
API_URL=http://localhost:3001

# Production Environment Variables (for Docker setup)
# Uncomment and use these for production deployment:
# WEB_URL=http://localhost:8000
# API_URL=http://localhost:8000/api 