# AI Quiz Maker Environment Variables
# Copy this file to .env and fill in your actual values

# Required - OpenAI API Key for quiz generation
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional - Maximum PDF file size in bytes (default: 100MB)
# 104857600 = 100MB, 52428800 = 50MB, 209715200 = 200MB
MAX_PDF_SIZE=104857600

# Optional - Custom port for API (default: 3001)
PORT=3001 

MAX_PAGES_PER_PDF=200
DEFAULT_QUESTIONS_PER_PAGE=2